<div class="container">

  <div>
    <h1>Editing: <%= @dojos.branch %></h1>

    <div class="col-md-4">

      <div class="form-group">

        <form class="" action="/dojos/<%= @dojos.id%>" method="post">

          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
          <!-- this PUT allow us to update the information -->
          <input type="hidden" name="_method" value="put">

          <div class="form-group">
            <label>Branch:</label>
            <input type="text" id="branch" name="dojo[branch]" value= "<%= @dojos.branch %>">
          </div>

          <div class="form-group">
            <label>Street:</label>
            <input type="text" id="street" name="dojo[street]" value= "<%= @dojos.street %>">
          </div>

          <div class="form-group">
            <label>City:</label>
            <input type="text" id= "city" name="dojo[city]" value= "<%= @dojos.city %>">
          </div>

          <div class="form-group">
            <label>State:</label>
            <input type="text" id= "state" name="dojo[state]" value= "<%= @dojos.state %>">
          </div>

          <button type="submit" class="btn btn-default">Update</button>
        </form>
        <a href="/dojos">Home</a> | <%= link_to "Show", %>
      </div>

    </div>

  </div>

</div>
