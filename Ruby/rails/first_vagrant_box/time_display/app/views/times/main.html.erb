<div class="container">
  <div class="time_controller">
    <h1>The Current Time and Date:</h1>
    <div class="time_info well well-small">
      <!-- Shows the month  -->
      <h3><%= @time.strftime("%b %d, %Y")%></h3>
      <!-- Shows the time  -->
      <h3><%= @time.strftime("%I : %M %p")%></h3>
    </div>
  </div>
</div>
